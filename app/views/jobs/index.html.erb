<div class="container">

  <!-- Header
  ================================================== -->

  <%= render(:partial => 'shared/header') %>

  <!-- ****** Large Announcement ****** -->
  <div class="announcement">
    <h1>
      A collection of jobs to help designers find their next project.
    </h1>
  </div>
  
    <!-- Main Content
  ================================================== -->
  <div class="mainContent">

    <!-- Side Navigation 
    ************************************************** -->
    <div class="sideNav">
      <ul>

        <!-- Category Nav List -->
        <% @categories.each do |category, category_id| %>
          <div class="navItem">
            <div class="navMarker"><i></i></div>
            <li><a href="#<%= category_id %>"><%= category %></a></li>
          </div>
        <% end %>
        
        <!-- Nav Footer -->
        <div class="navItem">
          <div class="navMarker"><i></i></div>
          <li>
            <%= link_to "Post a Job", new_job_path %><br>(Free until Aug. 15th.)
          </li>
        </div>
        <div class="navItem">
          <div class="navMarker"><i></i></div>
          <li>Built by <a href="https://twitter.com/robinsongreig" target="_blank" class="credit"><%= image_tag("ghost.png", :alt => "Robinson Greig") %></a></li>
        </div>
        <div class="navItem">
          <a href="https://twitter.com/home?status=Sans%20Francisco%20is%20a%20collection%20of%20digital%20resources%20for%20digital%20designers.%20www.sansfrancis.co%20via%20%40robinsongreig" target="_blank">
          <!-- Rick Roll <a href="https://youtu.be/dQw4w9WgXcQ?t=43s" target="_blank">-->
            <button class="ui basic twitter button tweetThis">
              <i class="twitter icon"></i>
              Tweet
            </button>
          </a>
        </div>
      </ul>
    </div>

    <!-- Resource List 
    ************************************************** -->
    <div class="dataTable" id="dataTable">

      <% @categories.each do |category, category_id| %>

        <!-- Category Title -->
        <h2 id="<%= category_id %>">
          <%= category %>
        </h2>
        <div class="breakerBar"></div>

        <!-- Category Details -->
        <% @jobs.each do |job| %>
          <% if job.category == category %>  
            <div class="job">
              <a href="<%= job.url %>?ref=sansfrancisco" target="_blank">
                <h3 class="companyName"> 
                  <%= job.companyName %>
                </h3>
              </a>

              <!-- Meta -->
              <div class="meta" style="">
                <p>
                  <%= time_ago_in_words(job.created_at) %> ago <br>
                  <%= job.location %> 
                </p>
              </div>

              <p class="positionDescription">
                <a href="<%= job.url %>?ref=sansfrancisco" target="_blank">
                  <span class="positionTitle"><%= job.positionTitle %></span>
                </a>
                working on <%= job.positionDescription %>
              </p>
              <p class="jobMeta">
                
              </p>
            </div>
          <% end %>
        <% end %>
      <% end %>


    </div>
  </div>

  <!-- Footer
  ================================================== -->
  <footer>
    <p>
      Built by <a href="https://twitter.com/robinsongreig" target="_blank" class="credit"><%= image_tag("ghost.png", :alt => "Robinson Greig") %></a>
    </p>
  </footer>
</div>

<script>
  scrollToDiv();
  stickyNav();
  themeColor();
  navOverlay();
</script>