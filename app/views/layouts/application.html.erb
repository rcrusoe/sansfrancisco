	<!-- Script to track outbound link clicks  -->
	<script>
	var trackOutboundLink = function(url) {
	   ga('send', 'event', 'outbound', 'click', url, {
	     'transport': 'beacon',
	     'hitCallback': function(){window.open(url);}
	   });
	}
	</script>
</head>
<body>
	<div class="container">
		<%= render(:partial => 'shared/header')%>
