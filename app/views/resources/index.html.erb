<!-- ****** Large Announcement ****** -->
<div class="announcement">
  <h1>
    A collection of tools to help designers craft delightful experiences.
  </h1>
</div>

<!-- Main Content
================================================== -->
<div class="mainContent">

  <!-- Side Navigation
  ************************************************** -->
  <div class="sideNav">
    <ul>

      <!-- Category Nav List -->
      <% @categories.each do |category, category_id| %>
        <div class="navItem">
          <div class="navMarker"><i></i></div>
          <li><a href="#<%= category_id %>"><%= category %></a></li>
        </div>
      <% end %>
    </ul>

    <%= render(:partial => 'shared/newsletterForm')%>
    <script async type="text/javascript" src="//cdn.carbonads.com/carbon.js?zoneid=1696&serve=CVYD42T&placement=sansfrancisco" id="_carbonads_js"></script>
  </div>

  <!-- Tool List
  ************************************************** -->
  <div class="dataTable" id="dataTable">
    <div class="mobileShow">
    </div>
    <!-- Featured Resources -->
    <div class="featuredResources">
      <% @resources.each do |resource| %>
        <% if resource.featured == true %>
          <%= render(:partial => 'resource', :locals => {:resource => resource})%>
        <% end %>
      <% end %>
    </div>

    <% @categories.each do |category, category_id| %>

      <!-- Category Title -->
      <h2 id="<%= category_id %>">
        <%= category %>
      </h2>
      <div class="breakerBar"></div>

      <!-- Category Details -->
      <% @resources.each do |resource| %>
        <% if resource.category == category %>
          <%= render(:partial => 'resource', :locals => {:resource => resource})%>
        <% end %>
      <% end %>
    <% end %>
  </div>

</div>
