<!-- ****** Primary Navigation ****** -->
<div class="header">
  <h3 class="logo">
    Sans Francisco
  </h3>

  <div class="desktopTopNav">
    <% if current_user %>
      <p>
        <%= link_to "Sign Out", signout_path %>
      </p>
    <% else %>
      <p>
        <%= link_to "Sign in with Twitter", "/auth/twitter" %>
      </p>
    <% end %>
    <p class="topNavItem">
      <span style="text-decoration: line-through">Jobs</span>  (Coming Soon)
    </p>
    <%= nav_link "Library", publications_path %>
    <%= nav_link "Toolkit", root_path %>
  </div>

  <div class="mobileTopNav">
    <p class="hamburger">
      <%= image_tag("hamburger.png", :alt => "Open Menu") %>
    </p>
  </div>
</div>

<div class="overlay">
  <div class="overlay-content">
    <p class="cross">
      <%= image_tag("cross.png", :alt => "Close Menu") %>
    </p>
    <%= nav_link "Library", publications_path %>
    <%= nav_link "Toolkit", root_path %>
  </div>
</div>

<script>
$( ".hamburger" ).click(function() {
  $( ".overlay" ).css('height', '100vh');
});

$( ".cross" ).click(function() {
  $( ".overlay" ).css('height', '0')
});
</script>